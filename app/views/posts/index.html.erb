<h1>Welcome to your wall!</h1>

<%= link_to 'Complete Next Activity', selected_activities_path %></br>
<br>
<%= link_to 'New Post', new_post_path %></br>
<br>

<% @posts.each do |post| %>
  <strong><%= post.title %></strong></br>
  <%= post.content %></br>
  Posted <%= time_ago_in_words(post.created_at) %> ago</br>
  <%= link_to 'Edit', edit_post_path(post) %> <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></br>
<br>
<% end %>



