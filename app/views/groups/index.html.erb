<h1>Groups</h1>

<table>
  <% @groups.each do |group| %>
  <tr>
  	<td><%= group.name %></td>
  	<td><%= link_to 'Edit', edit_group_path(group)%></td>
  	<td><%= link_to 'Delete', group_path(group), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<%= link_to 'New', new_group_path %>